mport java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner ler=new Scanner(System.in);
        System.out.println("Digite o ano Atual");
        double anoatual = ler.nextDouble();
        System.out.println("Qual o ano de nascimento");
        double anonascimento = ler.nextDouble();
        double idade = anoatual-anonascimento;
        System.out.println("Você tem " + idade + (" anos"));
        double mes = idade * 12;
        System.out.println("Você tem " + mes + (" m"));
        double semana = (idade * 365)/7;
        System.out.println("Você tem " + semana + (" semana"));
        double dia = idade * 365;
        System.out.println("Você tem " + dia + (" dias"));
        }

    }
