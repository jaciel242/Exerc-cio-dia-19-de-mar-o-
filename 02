import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner ler=new Scanner(System.in);
        System.out.println("Qual o Salario?");
        double salario = ler.nextDouble();
        System.out.println("digita a porcetagem");
        double acrescimo = ler.nextDouble();
        double novosalario = salario*1.25;
        System.out.println( novosalario*(acrescimo/100+1));

    }
}
